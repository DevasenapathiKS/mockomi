# Environment Configuration
NODE_ENV=development

# Server
PORT=5001
API_VERSION=v1
API_PREFIX=/api

# MongoDB
MONGODB_URI=mongodb://localhost:27017/mockomi
MONGODB_URI_TEST=mongodb://localhost:27017/mockomi_test

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=7d

# AWS S3
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_S3_VIDEO_BUCKET=your-s3-video-bucket-name

# Razorpay
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# RazorpayX Payouts (Required for live withdrawals)
# Get this from: https://dashboard.razorpay.com/app/dashboard > RazorpayX > Current Accounts
# Format: 7878780080316316 (Example)
# Leave empty to use TEST MODE (auto-complete withdrawals without actual transfer)
RAZORPAYX_ACCOUNT_NUMBER=

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=noreply@yourdomain.com

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Interview Pricing (in paise - â‚¹100 = 10000 paise)
FREE_INTERVIEWS=2
INTERVIEW_PRICE_PAISE=10000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

